{
  "compilerOptions": {
    "target": "es5",
    "outDir": "../jit",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "../node_modules/@types/"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts",
    "aot/*"
  ],
  "angularCompilerOptions": {
    "genDir": "jit",
    "skipMetadataEmit" : true
  }
}
